---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
const currentPath = Astro.url.pathname;

const navItems = [
  { label: 'Work', href: '/work' },
  { label: 'Feed', href: '/feed' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];
---

<nav class:list={['nav', className]} aria-label="Main navigation">
  <div class="nav-group">
    <div class="nav-blur" aria-hidden="true"></div>
    <div class="nav-links">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={['nav-link', { 'is-active': currentPath === item.href }]}
        >
          {item.label}
        </a>
      ))}
    </div>
    <a href="https://ko-fi.com/shaynadunkelman" target="_blank" rel="noopener noreferrer" class="donate-btn">
      Donate
    </a>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    /* Safe area padding for notched devices (Dynamic Island, etc.) */
    padding: max(1.5rem, env(safe-area-inset-top)) max(2rem, env(safe-area-inset-right)) 1.5rem max(2rem, env(safe-area-inset-left));
    pointer-events: none;
    view-transition-name: nav;
  }

  .nav-group {
    position: relative;
    display: flex;
    align-items: center;
    gap: 2rem;
    pointer-events: auto;
  }

  .nav-blur {
    /* Mobile: edge-to-edge gradient scrim */
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 80px;
    z-index: 1;
    background: linear-gradient(
      to bottom,
      color-mix(in srgb, var(--bg-void) 85%, transparent) 0%,
      color-mix(in srgb, var(--bg-void) 50%, transparent) 50%,
      transparent 100%
    );
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    pointer-events: none;
  }

  @media (min-width: 640px) {
    .nav-blur {
      /* Desktop: anchored to top-right, fades toward bottom-left */
      position: fixed;
      top: 0;
      right: 0;
      left: auto;
      bottom: auto;
      width: 50vw;
      height: 120px;
      background: color-mix(in srgb, var(--bg-void) 70%, transparent);
      mask-image: radial-gradient(
        ellipse 120% 150% at 100% 0%,
        black 0%,
        black 40%,
        transparent 70%
      );
      -webkit-mask-image: radial-gradient(
        ellipse 120% 150% at 100% 0%,
        black 0%,
        black 40%,
        transparent 70%
      );
    }
  }

  .nav-links {
    position: relative;
    z-index: 2;
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--text-primary);
    transition: width 0.2s ease;
  }

  .nav-link:hover,
  .nav-link.is-active {
    color: var(--text-primary);
  }

  .nav-link:hover::after,
  .nav-link.is-active::after {
    width: 100%;
  }

  .donate-btn {
    position: relative;
    z-index: 2;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--bg-void);
    background: var(--accent-indigo);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .donate-btn:hover {
    background: var(--accent-purple);
    transform: translateY(-1px);
  }

  @media (max-width: 640px) {
    .nav {
      padding: max(1rem, env(safe-area-inset-top)) max(1rem, env(safe-area-inset-right)) 1rem max(1rem, env(safe-area-inset-left));
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.75rem;
    }

    .donate-btn {
      font-size: 0.625rem;
      padding: 0.375rem 0.75rem;
    }
  }
</style>
