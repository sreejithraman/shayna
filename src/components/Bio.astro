---
import { siteConfig } from '@/config/site';

interface Props {
  text?: string;
}

const { text = siteConfig.bio } = Astro.props;
---

<section class="bio-section">
  <div class="bio-container">
    <p class="bio-text">{text}</p>
  </div>
</section>

<style>
  .bio-section {
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
  }

  .bio-container {
    max-width: 800px;
  }

  .bio-text {
    font-size: clamp(1.25rem, 3vw, 2rem);
    font-weight: 300;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  @media (min-width: 768px) {
    .bio-section {
      padding: 6rem 4rem;
    }
  }
</style>
